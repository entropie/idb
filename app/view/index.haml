#body
  .line.top
    - img = @images.top
    = img.tag(:medium)
  .line.top-3
    - @images.top(1..3).each do |img|
      = img.tag(:medium)
  .line.top-12
    - @images.top(3..11).each do |img|
      = img.tag(:medium)
  .line.top-rest
    - @images.top(12..-1).each do |img|
      = img.tag(:thumb)
