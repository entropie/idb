#body
  .line.top
    - img = @images.top
    = img.tag(:medium)
  .line.top-3
    %ul
      - @images.top(1..3).each do |img|
        %li= img.tag(:medium)
  .line.top-12
    %ul
      - @images.top(3..11).each do |img|
        %li= img.tag(:medium)
  .line.top-rest
    %div#thumb-content
    %ul#thumb-tabs
      - thumblinks.each do |desc, link|
        %li
          %a{:href => link}= desc
