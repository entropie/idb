#body
  .line.top
    - img = @images.top
    = img.tag(:medium)
  .line.top-3
    %ul
      - @images.top(1..3).each do |img|
        %li= img.tag(:medium)
  .line.top-12
    %ul
      - @images.top(3..11).each do |img|
        %li= img.tag(:medium)
  .line.top-rest
    %ul
      - @images.top(12..49).each do |img|
        %li= img.tag(:thumb)
